@model CarpooliDotTN.ViewModels.CarpoolCard

<div class="card m-2">
    <div class="card-header">
        Created 
        @if(@Model.ByOwner) {}
        at @Model.Carpool.CreationTime
    </div>
    <div class="card-body d-flex justify-content-between">
        <div>
            @Model.Carpool.DepartureCity &rArr;	@Model.Carpool.ArrivalCity ( @Model.Carpool.Price DT )
            <br/>
            Leaving at @Model.Carpool.DepartureTime
        </div>
        @if (Model.Availabilty){
            <div>
                @if (Model.Carpool.IsOpen)
                    {
                        <div class="btn btn-success disabled ">Open</div>
                    }
                    else
                    {
                        <div class="btn btn-danger disabled">Closed</div>
                    }
            </div>
        }
        
    </div>
    <div class="card-footer d-flex justify-content-between"> 
   @if (Model.SeeCarpool){<a  class="btn btn-outline-info mx-1"  href="@Url.Action("Details","Carpool",new {id=Model.Carpool.Id})">More...</a>}
   @if (Model.Apply){<a class="btn btn-warning mx-1" href="@Url.Action("Apply","Demand",new {id=Model.Carpool.Id})">Apply</a>}
   @if (Model.SeeApplication){<a class="btn btn-outline-warning mx-1" href="@Url.Action("Details","Demand",new {id=Model.DemandId})">See Application</a>}
   
        
    </div>
</div>